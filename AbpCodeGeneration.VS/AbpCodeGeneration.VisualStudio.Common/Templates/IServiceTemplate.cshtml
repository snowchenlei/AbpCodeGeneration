        /// 创建或编辑@(Model.LocalName)
        /// </summary>
        Task CreateOrUpdate@(Model.ClassName)(CreateOrUpdate@(Model.ClassName)Input input);

        /// <summary>
        /// 删除@(Model.LocalName)
        /// </summary>
